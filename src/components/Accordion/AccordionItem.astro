---
const { open, id } = Astro.props;
---

<div class="flex flex-col">
  <button
    @click=`selectedAccordionItem = '${id}'`
    class="px-6 flex justify-between items-center text-2xl transition-all duration-500"
    :class=`selectedAccordionItem == '${id}' ? 'pt-10' : 'py-10'`>
    <slot name="header" />
    <div class="relative">
      <i class="ti ti-minus text-[2rem] leading-none text-slate-500"></i>
      <i
        class="ti ti-minus text-[2rem] leading-none text-slate-500 absolute top-0 left-0 transition-all duration-300"
        :class=`selectedAccordionItem == '${id}' ? '' : 'rotate-90'`></i>
    </div>
  </button>

  <div
    class="grid px-6 transition-all duration-500"
    :class=`selectedAccordionItem == '${id}' ? 'grid-rows-[1fr] mt-4 mb-10' : 'grid-rows-[0fr] mt-0 mb-0'`>
    <div class="text-2xl text-slate-500 pe-16 overflow-hidden">
      <slot name="body" />
    </div>
  </div>
</div>

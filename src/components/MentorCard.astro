---
import cambridge from "../assets/imgs/universities/cambridge.png";
import CountryBadge from "./CountryBadge.astro";

const { name, img, id } = Astro.props;
---

<div
  class="rounded-lg border overflow-hidden bg-white relative hover:shadow-lg transition">
  <div class="p-3">
    <div class="flex flex-col gap-y-4">
      <div class="relative rounded-md overflow-hidden">
        <img src={img.src} class="w-full aspect-square object-cover" alt="" />
        <label
          for={id}
          class="absolute top-3 right-3 z-10 p-2 leading-none cursor-pointer">
          <input id={id} type="checkbox" class="hidden peer" />
          <i
            class="ti text-2xl leading-none text-white before:content-['\\eabe'] peer-checked:text-red-500 peer-checked:before:content-['\\f67c']"
          ></i>
        </label>
        <div
          class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 text-white">
          <h3 class="px-2 pb-2 pt-12 text-lg font-nosans font-semibold">
            {name}
          </h3>
        </div>
      </div>

      <div class="flex gap-2 items-center text-slate-500 text-sm">
        <img
          src={cambridge.src}
          class="inline-block leading-none w-6 h-6"
          alt=""
        />
        University of Cambridge
      </div>

      <div>
        <div class="text-sm text-slate-500 mb-1">Scholarship:</div>
        <div class="text-sm font-medium">
          <a href="#!">Stipendium Hungaricum</a>, <a href="#!">Fulbright</a>
        </div>
      </div>
      <hr />
      <div class="grid grid-cols-2 gap-x-4">
        <CountryBadge size="sm" country="en" title="England" />
        <div class="text-end text-sm">150 000 sum/soat</div>
      </div>
    </div>
  </div>
  <a
    href="#!"
    class="before:absolute before:top-0 before:left-0 before:right-0 before:bottom-0"
  ></a>
</div>

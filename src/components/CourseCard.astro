---
const { title, grade, students, author, countries, img } = Astro.props;
---

<div
  class="rounded-lg border overflow-hidden bg-white relative hover:shadow-lg transition">
  {img && <img src={img.src} class="object-cover aspect-video w-full" alt="" />}
  <div class="p-6">
    <div class="flex justify-between mb-4">
      <a
        href="#!"
        class="inlin-block py-1 px-3 text-xs bg-slate-100 border rounded-full"
        >{grade}</a
      >
      <div class="flex gap-x-1 items-center">
        {
          countries.map((item) => (
            <a href="#!" class="inline-block leading-none">
              <img src={item.src} alt="" class="h-6" />
            </a>
          ))
        }
      </div>
    </div>
    <h2 class="text-2xl font-semibold font-nosans mb-6 line-clamp-2">
      <a
        href="/course"
        class="before:absolute before:top-0 before:left-0 before:right-0 before:bottom-0 hover:text-blue-500 transition">
        {title}</a
      >
    </h2>
    <div class="flex justify-between items-center">
      <a href="#!" class="flex items-center gap-x-2">
        <img
          src={author.img.src}
          class="inline-block w-8 aspect-square rounded-full object-cover"
          alt=""
        />
        <span class="text-sm text-blue-500 font-medium">{author.name}</span>
      </a>
      <span class="text-sm text-slate-500">{students} students</span>
    </div>
  </div>
</div>
